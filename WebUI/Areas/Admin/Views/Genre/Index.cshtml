@model List<DataAccess.Entity.Genre>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Türler</h2>
        <a asp-action="PostGenre" asp-controller="Genre" class="btn btn-primary float-right">Tür Ekle</a>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tür</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.GenreName</td>
                    <td>
                        @{
                            if (genre.IsActive)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        }
                    </td>
                    <td>
                        <form asp-action="DeleteGenre" method="post">
                            
                            <input type="hidden" name="genreId" value="@genre.Id" />
                            <button type="submit" class="btn btn-outline-warning"> Sil</button>

                            <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" type="submit" class="btn btn-outline-success">Güncelle </a>

                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
